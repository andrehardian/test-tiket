<resources>

    <!-- APP THEME -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_ms</item>
    </style>

    <!--TOOLBAR-->


    <!--TEXT STYLE-->

    <style name="TextAppearance.Text.Medium" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_ms</item>
    </style>

    <style name="TextAppearance.Text.Semi.Bold" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_ms</item>
    </style>


    <style name="EditText" parent="android:Widget.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey_dark</item>
        <item name="android:textSize">@dimen/text_ms</item>
    </style>

</resources>
